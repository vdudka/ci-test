apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: demo-task
spec:
  params:
    # Git repo params
    - name: git-repo-url
      type: string
      default: https://github.com/vdudka/ci-test
      description: Git repo URL
    - name: git-image
      type: string
      default: registry-1.docker.io/certascale/ci-tool:3.7.1
    - name: git-home
      type: string
      default: demo-repo
    # Output registry params
    - name: registry-name
      type: string
      default: harbor-core.kube-system.svc.cluster.local/ci
    - name: image-name
      type: string
      default: tekton-demo
    - name: image-tag
      type: string
      default: v1

  steps:
  - name: git-clone
    image: $(params.git-image)
    workingDir: /workspace
    env:
      - name: GIT
        value: /workspace/.docker
    script: |
      #!/usr/bin/env bash
      # Clean distanation directory
      [ -a $(params.git-home) ] && rm -rf $(params.git-home)
      mkdir -p $(params.git-home) && cd $(params.git-home)
      git clone $(params.git-repo-url) .

  - name: create-config
    image: busybox
    workingDir: /workspace
    script: |
      #!/bin/sh
      echo "Create docker config file with Harbor admin account"
      mkdir -p /workspace/.docker/
      echo '{"auths": {"harbor-core.kube-system.svc.cluster.local":{"auth": "YWRtaW5AaGFyYm9yLmxvY2FsOkhhcmJvcjEyMzQ1"}}}' > /workspace/.docker/config.json
      ls -la demo-repo/

  - name: build-and-push
    image: gcr.io/kaniko-project/executor:v1.7.0
    workingDir: /workspace/
    env:
      - name: DOCKER_CONFIG
        value: /workspace/.docker
    command:
      - /kaniko/executor
      - --dockerfile=demo-repo/Dockerfile
      - --context=/workspace
      - --skip-tls-verify-pull
      - --skip-tls-verify
      - --destination=$(params.registry-name)/$(params.registry-name)/$(params.image-name):$(params.image-tag)
